{
  "$schema": "https://turborepo.com/schema.json",
  "envMode": "loose",
  "remoteCache": {
    "enabled": true
  },
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist"
      ]
    },
    "build-prod": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "build/**"
      ]
    },
    "lint": {
      "outputs": []
    },
    "clean": {
      "cache": false,
      "outputs": []
    },
    "test": {
      "outputs": []
    },
    "test:watch": {
      "cache": false
    },
    "start:prod": {
      "cache": true
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "outputs": []
    }
  }
}